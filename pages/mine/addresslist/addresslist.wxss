    min-height: 100%;
}
.chaddress{
    /* padding: 0 3%; */
    background: #fff;
}
.shop_item{
    padding: 25rpx 3%;
    position: relative;
    border-bottom: 1px solid #ddd;
    position: relative;
}
.choose_logo{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    margin-top: -20rpx;
}
.shop_item_con{
    margin-left: 60rpx;
    width: 80%;
}
.name{
    /* display: block; */
    width: 85%;
    color: #454545;
    font-size: 32rpx;
}
.tel{
    color: #999;
    font-size: 26rpx;
    margin-left: 5rpx;
}
.address{
    display: block;
    width: 80%;
    color: #999;
    font-size: 26rpx;
}
.operate{
    position: absolute;
    right: 3%;
    top: 50%;
    height: 30rpx;
    margin-top: -15rpx;
    width: 15%;
}
.edit{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}
.delete{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}
.seprate{
    padding: 30rpx 3% 20rpx 3%;
    font-size: 26rpx;
    color: #666;
}
.edit_btn{
    width: 94%;
    margin: 36rpx auto;
    height: 90rpx;
    background: #6dc135;
    font-size: 32rpx;
    color: #fff;
    border-radius: 5rpx;
}