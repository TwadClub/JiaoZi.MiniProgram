/* pages/shop/goodinfo/goodinfo.wxss */
.clearfix:after {
    height: 0rem;
    display: block;
    clear: both;
    visibility: hidden;
    content: "\0020";
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.goodcar{
    padding-bottom: 80rpx;
}
.goodcar-operate{
    height: 85rpx;
    line-height: 85rpx;
    padding: 0 5%;
    background: #f5f5f5;
}
.goodcar-operate-check .all{
    font-size: 30rpx;
    color: #666;
    margin-left: 20rpx;
}
.goodcar-operate-check .count {
    font-size: 22rpx;
    color: #999;
    margin-left: 10rpx;
}
.goodcar-operate-delete{
    font-size: 26rpx;
    color: #666;
}
.goodcar-list{
    padding: 20rpx 5%;
    background: #fff;
}
.goodcar-content-item{
    position: relative;
}
.goodcar-content-item-check{

}
.goodcar-content-item-con{
    width: 70%;
}
.goodcar-content-item-con .logo{
    width: 170rpx;
    height: 170rpx;
    border-radius: 7rpx;
}
.goodcar-content-item-ope{
    position: absolute;
    bottom: 0;
    right: 0;
}

.cart_container {
    display: flex;
    flex-direction: row;
    padding: 0 5%;
    position: relative;
  }
.scroll-item:last-child .separate{
    height: 0rpx;
  }
  .separate{
      height: 10rpx;
      /* width: 100%; */
      background: #f5f5f5;
  }
  .scroll {
    margin-bottom: 120rpx;
  }
  .column {
    display: flex;
    flex-direction: column;
  }
  .row {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .sku {
    position: absolute;
    right: 5%;
    bottom: 15rpx;
  }
  .sku-price {
    color: #ff9600;
    position: relative;
    margin-top: 35rpx;
  }
  .price {
    color: #ff9600;
    position: relative;
  }
  .title {
    font-size: 30rpx;
    margin-top: 25rpx;
    color: #454545;
  }
  .tips{
    font-size: 18rpx;
    color: #999;
    margin-top: 15rpx;
  }
  .quality{

  }
  .sub{
    width: 50rpx;
    height: 50rpx;
  }
  .count{
      padding: 0 20rpx;
      color: #666;
      font-size: 28rpx;
      line-height: 50rpx;
  }
  .add{
    width: 50rpx;
    height: 50rpx;
  }
  .small_text {
    font-size: 28rpx;
    margin-right: 40rpx;
    margin-left: 10rpx;
  }
  .item-select {
    width: 40rpx;
    height: 40rpx;
    margin-top: 90rpx;
  }
  .item-allselect {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
  }
  .item-image {
    width: 180rpx;
    height: 180rpx;
    margin: 20rpx;
    border-radius: 8rpx;
  }
  .bottom_line {
    width: 100%;
    height: 2rpx;
    background: lightgray;
  }
  .bottom_total {
    position: fixed;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background: white;
  }
  .button-red {
    background-color: #f44336; /* 红色 */
  }
  button {
    position: fixed;
    right: 0;
    color: white;
    text-align: center;
    display: inline-block;
    font-size: 30rpx;
    border-radius: 0rpx;
    width: 30%;
    height: 120rpx;
    line-height: 120rpx;
  }

.footer{
    height: 98rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 9;
    border-top: 1rpx solid #ddd;
}
.footer .price{
    width: 65%;
    background: #fff;
    height: 98rpx;
    line-height: 98rpx;
    padding: 0 5%;
    box-sizing: border-box;
}
.footer .pay{
    width: 35%;
    background: #6dc135;
    height: 98rpx;
    line-height: 98rpx;
}
.footer .pay view{
    font-size: 30rpx;
    background: #6dc135;
    color: #fff;
    text-align: center;
}
.footer .price .tip{
    font-size: 30rpx;
    color: #666;
}
.footer .price .txt{
    font-size: 26rpx;
    color: #ff9600
}
.footer .price .int{
    font-size: 40rpx;
    color: #ff9600
}
.footer .price .decimal{
    font-size: 25rpx;
    color: #ff9600
}
.bottom_info{
    position: fixed;
    width: 100%;
    z-index: 9;
    left: 0;
    bottom: 98rpx;
    background: #f5f5f5;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 5%;
}
.bottom_txt{
    font-size: 24rpx;
    color: #666;
}
.bottom_price{
    font-size: 24rpx;
    color: #ff9600
}
.empty_logo{
    display: block;
    margin: 240rpx auto 0 auto;
    width: 30%;
}
.empty_txt{
    text-align: center;
    margin-top: 20rpx;
    font-size: 32rpx;
    color: #666;
}

.empty{
    position: absolute;
    top: 20%;
    left: 0;
    width: 100%;
}
.logo{
    width: 60%;
    display: block;
    margin: 0 auto;
}
.tips{
    text-align: center;
    font-size: 28rpx;
    color: #999;
    margin-top: 20rpx;
    display: block;
}
