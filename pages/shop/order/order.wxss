/* pages/shop/order/order.wxss */
page{
    padding-bottom: 96rpx;
}
.clearfix:after {
    height: 0rem;
    display: block;
    clear: both;
    visibility: hidden;
    content: "\0020";
}
.fl{
    float: left;
}
.shop-order{
    font-size: 28rpx;
}
.shop-top{
    background: #f5f5f5;
    padding: 30rpx 5%;
}
.shop-top .shop-txt{
    background: #f5f5f5;
}
.shop-top .shop-txt .logo-img{
    float: left;
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
}
.shop-top .shop-txt .info{
    float: left;
    margin-left: 5%;
    width: 68%;
    height: 160rpx;
}
.shop-top .shop-txt .info .title{
    font-size: 32rpx;
    color: #454545;
}
.shop-top .shop-txt .info .address{
    color: #666;
    font-size: 24rpx;
    margin-top: 10rpx;
}
.shop-top .shop-txt .info .shop-time{
    color: #666;
    font-size: 24rpx;
}
.shop-top .shop-txt .info .shop-time .business{
    display: inline-block;
    padding: 0rpx 10rpx;
    margin-left: 5rpx;
    border: 0.01rem solid #6dc135;
    color: #6dc135;
    border-radius: 5rpx;
}
.shop-top .search{
    height: 48rpx;
    margin: 15rpx auto 0 auto;
    width: 100%;
    border-radius: 20rpx;
    background: #fff;
    text-align: center;
}
.shop-top .search image{
    display: inline-block;
    vertical-align: middle;
    width: 30rpx;
    height: 30rpx;
}
.shop-top .search span{
    display: inline-block;
    color: #999;
    margin-left: 10rpx;
    vertical-align: middle;
}
.business_left{
    float: left;
    width: 25%;
    background: #f3f3f3;
    overflow: auto;
    /* border-top: 2rpx solid #fff; */
}
.business_left_nav{
    height: 90rpx;
    line-height: 90rpx;
    color: #666;
    font-size: 24rpx;
    text-align: center;
}
.business_left_nav.nav{
    background: #fff;
    border-left: 5rpx solid #6dc135;
}
.business_right{
    float: left;
    width: 69%;
    background: #fff;
    overflow: auto;
    padding: 0 3%;
}
.business_right_list{
    height: 170rpx;
    position: relative;
    margin-bottom: 42rpx;
}
.business_right_title{
    display: block;
    height: 70rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #454545;
}
.business_right_list .good_logo{
    width: 170rpx;
    height: 170rpx;
    border-radius: 8rpx;
    float: left;
}
.business_right_list .good_info{
    float: left;
    width: 50%;
    margin-left: 24rpx;
}
.business_right_list .good_info .title{
    display: block;
    font-size: 30rpx;
    color: #454546;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.business_right_list .good_info.copies{
    display: block;
    font-size: 18rpx;
    color: #999;
    height: 35rpx;
    line-height: 35rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.business_right_list .good_info .sales_count{
    display: block;
    font-size: 18rpx;
    color: #999;
    height: 35rpx;
    line-height: 35rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.business_right_list .good_info .price{
    display: block;
    font-size: 34rpx;
    color: #ff9600;
    height: 50rpx;
    line-height: 50rpx;
}
.business_right_list .operate{
    position: absolute;
    right: 0;
    bottom: 0;
}
.business_right_list .operate .sub{
    width: 50rpx;
    height: 50rpx;
}
.business_right_list .operate .count{
    padding:0 20rpx;
    color:#666;
    font-size:28rpx;
    line-height: 50rpx;
}
.business_right_list .operate .add{
    width: 50rpx;
    height: 50rpx;
}
.carPop{
    position: fixed;
    right: 12%;
    bottom: 11%;
    background: rgba(0, 0, 0, 0.6);
    height: 86rpx;
    width: 86rpx;
    border-radius: 100%;
}
.carPop .logo{
    width: 39rpx;
    height: 39rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -19.5rpx;
    margin-top: -19.5rpx;
}
.carPop .count{
    height: 26rpx;
    width: 26rpx;
    background: #ff9600;
    border-radius: 100%;
    text-align: center;
    line-height: 26rpx;
    color: #fff;
    font-size: 20rpx;
    position: absolute;
    top: 0;
    right: 0;
}