.header {
    /* margin: 90rpx 50rpx 90rpx 50rpx; */
    text-align: center;
    width: 100%;
    height: 300rpx;
    line-height: 450rpx;
    margin: 50rpx 0;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.content {
    margin:0 50rpx 90rpx 50rpx;
    font-size: 28rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
    font-size: 32rpx;
}

.bottom {
    border-radius: 12rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}