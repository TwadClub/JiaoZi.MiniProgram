/* pages/order/list/list.wxss */
page{
  background: #f5f5f5;
  min-height: 100%;
}
.order_list{
  padding: 30rpx 3%;
  background: #fff;
  margin-bottom: 10rpx;
}
.order_top{}
.logo{
  width: 62rpx;
  height: 62rpx;
  border-radius: 5rpx;
}
.info{
  height: 62rpx;
  width: 60%;
  margin-left: 20rpx;
}
.info_title{
  height: 32rpx;
  line-height: 32rpx;
}
.info_time{
  height: 30rpx;
}
.info_title_tip{
  color: #454545;
  font-size: 28rpx;
}
.info_title_logo{
  height: 22rpx;
  width: 12rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.info_time{
  font-size: 22rpx;
  color: #999;
  display: block;
}
.order_status{
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
  color: #6dc135;
}
.order_center{
  margin-top: 10rpx;
}
.operate_btn{
  color: #666;
  font-size: 26rpx;
  border: 1rpx solid #dfdfdf;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 5rpx;
}
.active{
  color: #6dc135;
  border: 1rpx solid #6dc135;
}
.goodsinfo{
  font-size: 28rpx;
  color: #454545;
  padding-left:82rpx;
}
.price{
  font-size: 28rpx;
  color: #454545;
}